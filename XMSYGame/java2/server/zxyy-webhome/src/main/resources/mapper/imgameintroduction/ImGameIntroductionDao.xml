<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xmsy.server.zxyy.webhome.modules.manager.imgameintroduction.dao.ImGameIntroductionDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.xmsy.server.zxyy.webhome.modules.manager.imgameintroduction.entity.ImGameIntroductionEntity" id="imGameIntroductionMap">
        <result property="id" column="id"/>
        <result property="deleteStatus" column="delete_status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="version" column="version"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="enclosureId" column="enclosure_id"/>
        <result property="enable" column="enable"/>
        <result property="orderNo" column="order_no"/>
    </resultMap>
	<select id="selectListForWib" resultType="com.xmsy.server.zxyy.webhome.modules.webim.homepage.result.ImGameIntroductionResult">
		SELECT
			IFNULL(a.title,'') AS title,
			IFNULL(b.url,'') AS enclosureUrl,
			IFNULL(a.content,'') as content
		FROM
			im_game_introduction a
		LEFT JOIN webhome_enclosure b ON a.enclosure_id = b.id
		AND b.delete_status = 0
		WHERE
			a.delete_status = 0
		AND a.`enable` = 1
		ORDER BY order_no
	</select>

</mapper>