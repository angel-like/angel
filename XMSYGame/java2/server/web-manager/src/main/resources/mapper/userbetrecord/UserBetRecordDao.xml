<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.xmsy.server.zxyy.manager.modules.manager.userbetrecord.dao.UserBetRecordDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap
		type="com.xmsy.server.zxyy.manager.modules.manager.userbetrecord.entity.UserBetRecordEntity"
		id="userBetRecordMap">
		<result property="id" column="id" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="deleteStatus" column="delete_status" />
		<result property="version" column="version" />
		<result property="userId" column="user_id" />
		<result property="userAccount" column="user_account" />
		<result property="betCoins" column="bet_coins" />
		<result property="oldBet" column="old_bet" />
	</resultMap>
	<select id="sumUserBet"
		resultType="Long">
		select
			IFNULL(sum(bet_coins),0)
		from
			user_bet_record
		where
			user_id=#{userId}
	</select>

</mapper>