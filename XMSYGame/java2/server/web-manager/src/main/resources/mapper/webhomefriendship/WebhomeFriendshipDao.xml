<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.xmsy.server.zxyy.manager.modules.manager.webhomefriendship.dao.WebhomeFriendshipDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap
		type="com.xmsy.server.zxyy.manager.modules.manager.webhomefriendship.entity.WebhomeFriendshipEntity"
		id="webhomeFriendshipMap">
		<result property="id" column="id" />
		<result property="deleteStatus" column="delete_status" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="version" column="version" />
		<result property="name" column="name" />
		<result property="url" column="url" />
		<result property="orderNum" column="order_num" />
		<result property="color" column="color" />
		<result property="type" column="type" />
		<result property="icon" column="icon" />
	</resultMap>
	<!-- 官网友情链接列表 -->
	<select id="selectFriendshipList"
		resultType="com.xmsy.server.zxyy.manager.modules.manager.webhomefriendship.entity.WebhomeFriendshipEntity">
		SELECT
			a.id as id,
			a.`name` AS `name`,
			(
				CASE
				WHEN a.url IS NULL THEN
					''
				ELSE
					a.url
				END
			) AS url,
			a.type AS type,
			a.color AS color,
			a.order_num AS orderNum,
			(
				CASE
				WHEN b.url IS NULL THEN
					''
				ELSE
					b.url
				END
			) AS iconUrl
		FROM
			webhome_friendship a
		LEFT JOIN webhome_enclosure b ON a.icon = b.id
		WHERE
			a.delete_status != 1
		ORDER BY
			a.order_num
	</select>

</mapper>